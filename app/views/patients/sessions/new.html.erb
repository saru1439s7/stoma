<div class= "container">
  <div class='row'>

    <div class = "col-8 p-md-4">
      <h2 lass = "col-8 p-md-4">ログインして記録を始める</h2>
    <%= form_with model: @patient, url: patient_session_path, local: true do |f| %>

      <h3 class="field">
        <%= f.label :メール %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </h3>

      <h3 class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </h3>

      <% if devise_mapping.rememberable? %>
        <h3 class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :ログイン状態を保持する %>
        </h3>
      <% end %>

      <div class="actions">
        <%= f.submit "ログインする",class:"btn btn-success" %>
      </div>
    <% end %>
     <div class="actions">
    <%= render "patients/shared/links" %>
    </div>
  </div>
 </div>
</div>