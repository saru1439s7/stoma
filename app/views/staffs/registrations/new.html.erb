<div class= "container">
  <div class='row'>
    <div class = "col-12 p-md-2">
    <h2>医療スタッフ登録</h2>
     </div>
     <div class = "col-12 p-md-2">
<%= form_with model: @staff, url: staff_registration_path, id: 'new_staff', class: 'new_staff', local: true do |f| %>
  <%= render "staffs/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録",class:"btn btn-success" %>
  </div>
<% end %>
<div class="actions">
<%= render "staffs/shared/links" %>
</div>
    </div>
   </div>
</div>
