<div class="container">
  <div class="row">
    <div class="col-8">
<h3>検索結果</h3>
<table class ="table">
  <thead>
    <tr>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |patient| %>
      <tr>
        <td><%= link_to patient.name,staff_patient_path(patient.id),class: "btn btn-success" %></td>
        <td><%= link_to "患者さんのストーマ記録一覧を見る",staff_ostomy_index_path(patient.id),class: "btn btn-success" %></td>
        <td><%= link_to "記録をかく",new_staff_patient_record_path(patient.id),class: "btn btn-success"  %></td>
        <td><%= link_to "記録一覧",staff_patient_records_path(patient.id),class: "btn btn-success"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>