<div class="container">
 <div class="row">
    <div class="col-8">
    <h2>健康記録<br><%= @dialy.created_at.strftime('%Y/%m/%d') %></h2>
     <table class='table table-borderless'>
        <tr>
          <th>血圧</th>
          <td><%= @dialy.systolic_bp%>/<%= @dialy.diastolic_bp%>mmHg</td>
        </tr>
        <tr>
          <th>体温</th>
          <td><%= @dialy.bt%></td>
        </tr>
        <tr>
          <th>血糖</th>
          <td><%= @dialy.bs%></td>
        </tr>
        <tr>
          <th>体重</th>
          <td><%= @dialy.weight%></td>
        </tr>
        <tr>
          <th>便の色</th>
          <td><%= @dialy.color_i18n%></td>
        </tr>
        <tr>
          <th>調子</th>
          <td><%= @dialy.feeling_i18n%></td>
        </tr>
        <tr>
          <th>コメントメモ/感情分析スコアは-1.0〜1.0</th>
          <td><%= @dialy.comment%>
          <p class="sentiment-score">本文の感情分析スコア[<%= @dialy.score %>]</p></td>
        </tr>
        <tr>
          <th>写真</th>
          <td>
            <% if @dialy.image.attached? %>
            <%= image_tag @dialy.image %>
            <% else %>
            <%= image_tag 'no_image.jpeg' %>
            <% end %>
          </td>
        </tr>
     </table>
  </div>
 </div>
</div>