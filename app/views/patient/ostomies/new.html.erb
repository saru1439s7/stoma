<div class="container">
  <div class="row">
      <% if @ostomy.errors.any? %><% end %>
      <h4>ストマの記録をかく</h4>
      <%= form_with model: @ostomy, url: _pth loval true do |f| %>
      <table>
        <tr>
            <th>ストーマのいろ</th>
            <td>
            　<%= f.label :pink, 'ピンク' %><%= f.radio_button :color%>
              <%= f.label :red ,'あか' %><%= f.radio_button :color %>
              <%= f.label :blown , 'ちゃいろ' %><%= f.radio_button :color %>
              <%= f.label :black , 'くろ' %><%= f.radio_button :color %>
              <%= f.label :other, 'そのほか' %><%= f.radio_button :color %>
            </td>
        </tr>
        <tr>
            <th>むくみ</th>
            <td>
              <%= f.label :absense, 'なし' %><%= f.radio_button :edima %>
              <%= f.label :presense,'あり' %><%= f.radio_button :edima %>
            </td>
        </tr>
         <tr>
            <th>ひふの状態</th>
            <td>
              <%= f.label :same, '前回と同じ' %><%= f.radio_button :skin %>
              <%= f.label :red ,'あかい' %><%= f.radio_button :skin %>
              <%= f.label :blown , 'ちゃいろ' %><%= f.radio_button :skin %>
              <%= f.label :black , 'くろ' %><%= f.radio_button :skin %>
              <%= f.label :white, 'しろ' %><%= f.radio_button :skin %>
              <%= f.label :other, '水疱' %><%= f.radio_button :skin %>
            </td>
            </td>
        </tr>
         <tr>
            <th>ストマのたての長さ</th>
            <td><%= f.number_field :h_size, min:20 %>mm</td>
        </tr>
         <tr>
            <th>ストマのよこの長さ</th>
            <td><%= f.number_field :w_size, min:20 %>mm</td>
        </tr>
         <tr>
            <th>コメント・メモ</th>
            <td>
              <%=f.text_area :comment %>
            </td>
        </tr>
         <tr>
            <th>写真を貼る</th>
            <td><%=f.attachment_field :image %></td>
        </tr>
      </table>
        <%= f.submit '記録する' %>
      <%end%>
      
      
  </div>
</div>