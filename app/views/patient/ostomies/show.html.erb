<div class="container">
  <div class="row">
   <div class="col-8  p-lg-4">
    <h2>ストーマの記録:<%=@ostomy.created_at.strftime('%Y/%m/%d') %></h2>
   </div>
  </div>
    <div class="row">
     <div class="col-9 align-middle font-weight-bold center-block">
      <table class='table text-center'>
        <tr>
          <th>ストーマのいろ</th>
          <td><%= @ostomy.color_i18n%></td>
        </tr>
        <tr>
          <th>むくみ</th>
          <td><%= @ostomy.edema_i18n%></td>
        </tr>
        <tr>
          <th>ひふの状態</th>
          <td><%= @ostomy.skin_i18n%></td>
        </tr>
        <tr>
          <th>ストーマのたての長さ</th>
          <td><%= @ostomy.h_size%></td>
        </tr>
        <tr>
          <th>ストーマのよこの長さ</th>
          <td><%= @ostomy.w_size%></td>
        </tr>
        <tr>
          <th>コメント・メモ</th>
          <td><%= @ostomy.comment%></td>
        </tr>
        <tr>
          <th>写真</th>
          <td><!--< % if@ostomy.image.attached? %>
                  < %= image_tag @ostomy.image %>
                  < % else %>
                  < %= image_tag 'no_image.jpg' %>
                  < % end %>-->
          </td>
        </tr>
        <tr>
          <th>スタッフからのコメント</th>
          <td id="staff_comment">
            <% @ostomy.comments.each do |comment| %>
              <%= comment.staff.name %>
              <%= comment.created_at.strftime('%Y/%m/%d') %>
              <%= comment.comment %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to '編集する',edit_patient_ostomy_path(@ostomy), class: "btn btn-success btn-lg" %></td>
        </tr>
     </table>

     </div>
    </div>
</div>