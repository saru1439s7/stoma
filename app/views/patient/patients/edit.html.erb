<div class= "container">
  <div class='row'>
     <div class='col-8'>
    <h4 class="mt-md-4 mb-md-2">マイページの編集</h4>
  <%=form_with model: @patient, url:patient_patient_path, local:true do |f|%>
    <table class ="table">
      <tr>
        <th>名前</th>
        <td><%= f.text_field:name %></td>
      </tr>
      <tr>
        <th>名前(かな)</th>
        <td><%= f.text_field:name_kana %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field:email %></td>
      </tr>
      <tr>
        <th>画像</th>
        <td><%= f.file_field :image %></td>
      </tr>
    </table>
       <%= f.submit "変更を保存する",class: "btn btn-success"%>
    <%end%>
    </div>
  </div>
   </div>